<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txt_firstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txt_lastName" />

    <ImageView
        android:layout_width="wrap_content" android:id="@+id/imageViewContact"
        android:layout_height="wrap_content" android:src="@drawable/contact_default" />

    <ImageView
        android:layout_width="wrap_content" android:id="@+id/imageViewStar"
        android:layout_height="wrap_content" android:src="@android:drawable/star_on" />

</android.support.constraint.ConstraintLayout>